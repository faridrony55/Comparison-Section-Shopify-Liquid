<section class="id_{{ section.id }}">
  <div class="page-width">
    <h2 class=" " data-aos="fade-up">{{ title }}</h2>
  </div>

  <div class="page-width"> 
  <div class="row_new"> 
     
    
        {% liquid 

          assign title1 = section.settings.title1  
          assign title2 = section.settings.title2  
          assign title3 = section.settings.title3  
          assign title4 = section.settings.title4  
          assign title5 = section.settings.title5 
        %}
 
    <div class="tablecolumn   col_3">  
        <div class="tablerow ">
          <div class="tableheader"> 
             
              <h3> </h3>
            
          </div>
        </div> 
      
      {% if title1 != blank  %}
        <div class="tablerow  ">
          <div class="title">  
              <h4>{{ title1 }}</h4> 
          </div>
        </div>
      {% endif %}
      {% if title2 != blank  %}
        <div class="tablerow  ">
          <div class="title">  
              <h4>{{ title2 }}</h4> 
          </div>
        </div>
      {% endif %}
      {% if title3 != blank  %}
        <div class="tablerow  ">
          <div class="title">  
              <h4>{{ title3 }}</h4> 
          </div>
        </div>
      {% endif %}
      {% if title4 != blank  %}
        <div class="tablerow  ">
          <div class="title">  
              <h4>{{ title4 }}</h4> 
          </div>
        </div>
      {% endif %}

      {% if title5 != blank  %}
        <div class="tablerow  ">
          <div class="title">  
              <h4>{{ title5 }}</h4> 
          </div>
        </div>
      {% endif %}
      
    </div>
      

    <div class="tablecolumn  col_9">
        <div class="row_new">
      {% for block in section.blocks %}
        {% liquid
          assign header = block.settings.header
          assign logo = block.settings.logo

          assign title1 = block.settings.title1
          assign image1 = block.settings.image1

          assign title2 = block.settings.title2
          assign image2 = block.settings.image2

          assign title3 = block.settings.title3
          assign image3 = block.settings.image3

          assign title4 = block.settings.title4
          assign image4 = block.settings.image4

          assign title5 = block.settings.title5
          assign image5 = block.settings.image5
        %}

        <div class=" col_4">
          <div class="tablerow ">
            <div class="tableheader">
              {% if logo != blank %}
                <img src="{{ logo | img_url:'master' }}" alt="{{ logo.alt }}">
              {% elsif header != blank %}
                <h3>{{ header }}</h3>
              {% endif %}
            </div>
          </div>

          {% if title1 != blank or image1 != blank %}
            <div class="tablerow  ">
              <div class="title">
                {% if image1 != blank %}
                  <img src="{{ image1 | img_url:'master' }}" alt="{{ image1.alt }}">
                {% elsif title1 != blank %}
                  <h4>{{ title1 }}</h4>
                {% endif %}
              </div>
            </div>
          {% endif %}

          {% if title2 != blank or image2 != blank %}
            <div class="tablerow  ">
              <div class="title">
                {% if image2 != blank %}
                  <img src="{{ image2 | img_url:'master' }}" alt="{{ image2.alt }}">
                {% elsif title2 != blank %}
                  <h4>{{ title2 }}</h4>
                {% endif %}
              </div>
            </div>
          {% endif %}

          {% if title3 != blank or image3 != blank %}
            <div class="tablerow  ">
              <div class="title">
                {% if image3 != blank %}
                  <img src="{{ image3 | img_url:'master' }}" alt="{{ image3.alt }}">
                {% elsif title3 != blank %}
                  <h4>{{ title3 }}</h4>
                {% endif %}
              </div>
            </div>
          {% endif %}

          {% if title4 != blank or image4 != blank %}
            <div class="tablerow  ">
              <div class="title">
                {% if image4 != blank %}
                  <img src="{{ image4 | img_url:'master' }}" alt="{{ image4.alt }}">
                {% elsif title4 != blank %}
                  <h4>{{ title4 }}</h4>
                {% endif %}
              </div>
            </div>
          {% endif %}

          {% if title5 != blank or image5 != blank %}
            <div class="tablerow  ">
              <div class="title">
                {% if image5 != blank %}
                  <img src="{{ image5 | img_url:'master' }}" alt="{{ image5.alt }}">
                {% elsif title5 != blank %}
                  <h4>{{ title5 }}</h4>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    </div>
    </div>
  </div>
</section>

